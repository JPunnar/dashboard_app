<br>
<div class="container">
  <div class="row">
    <div class="col-sm-5">
      <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="form-group">
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
          </div>

          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control", required: true %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", required: true %>
          </div>

          <div class="actions">
            <br>
            <%= f.submit "Sign up", class: "btn bg-secondary" %>
          </div>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
    <div class="col-sm-3">
    </div>
    <div class="col-sm-4">
      <br>
      <strong>Create new account by providing email and password. If you already have an account, click Log in.</strong>
    </div>
  </div>
</div>