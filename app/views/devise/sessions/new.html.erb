<br>
<div class="container">
  <div class="row">
    <div class="col-sm-5">
      <h2>Log in</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <div class="field">
            <%= f.label :email %><br />
            <%= f.text_field :email, autofocus: true, class: "form-control", required: true %>
          </div>

          <div class="field">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control", required: true %>
          </div>
          <br>
          <div class="actions">
            <%= f.submit "Log in", class: "btn bg-secondary" %>
          </div>
        </div>
      <% end %>
      <br>
      <%= render "devise/shared/links" %>
    </div>
    <div class="col-sm-3">
    </div>
    <div class="col-sm-4">
      <br>
      <strong>Log in using your email and password. If you don't have account yet, click Sign up.</strong>
    </div>
  </div>
</div>